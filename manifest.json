{
    "manifest_version": 2,

    "name": "FilterTwitchChat",
    "description": "",
    "version": "1.0",

    "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    },
    
    "content_scripts": [{
        "js": ["filter.js"],
        "matches": ["*://twitch.tv/*", "*://*.twitch.tv/*"]
    }],
    
    "permissions": [
      "storage",
      "tabs",
      "https://www.twitch.tv/*",
      "http://www.twitch.tv/*"
    ]
}